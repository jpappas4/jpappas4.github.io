<div id="resume">
    <div id="resumeTitle" class="aos-init" data-aos="fade-up">
        <h1>Resume</h1>
    </div>
    <div id="resumeMain" class="aos-init" data-aos="fade-up">
        <a id="resumeView" href="/assets/JPappasResume.pdf" target="_blank">
            View Resume
            <img src="~/assets/viewfile.png"/>
        </a>
        <a id="resumeDownload" href="/assets/JPappasResume.pdf" download="">
            Download Resume
            <img src="~/assets/downloadfile.png" />
        </a>
    </div>
    <div id="contact">
        <div id="contactTitle" class="aos-init" data-aos="fade-up">
            <h1>Contact</h1>
            <form class="aos-init" data-aos="fade-up" method="post" name="contact">
                <input type="hidden" name="form-name" value="contact" />
                <div class="hidden">
                    <label>
                        Fill this if you are not human:
                        <input name="bot-field" />
                    </label>
                </div>
                <div class="group">
                    <input type="text" name="name" required="required"><span class="highlight"></span><span class="bar"></span>
                    <label>Name</label>
                </div>
                <div class="group">
                    <input type="text" name="email" required="required"><span class="highlight"></span><span class="bar"></span>
                       <label>Email</label>
                </div>
                <div class="group">
                    <textarea type="textarea" name="message" rows="5" required="required"></textarea><span class="highlight"></span><span class="bar"></span>
                    <label>Message</label>
                </div>
                <div class="btn-box">
                    <button class="btn btn-submit" type="submit">Send Message<img src="assets/sendimg.png"></button>
                </div>
            </form>
        </div>
    </div>
</div>